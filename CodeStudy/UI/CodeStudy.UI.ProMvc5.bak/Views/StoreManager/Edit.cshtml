@model CodeStudy.UI.ProMvc5.Models.AlbumEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Album</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AlbumToEdit.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumToEdit.Title, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("GenreId", Model.Genres)
                @Html.ValidationMessageFor(model => model.AlbumToEdit.GenreId)
            </div>
            <div class="col-md-10">
                @Html.DropDownList("ArtistId", Model.Artists)
                @Html.ValidationMessageFor(model => model.AlbumToEdit.GenreId)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumToEdit.Title, string.Empty, "Title", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AlbumToEdit.Title, "", new { @class = "text-danger" })
                @Html.ValidationMessage("Title")
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumToEdit.Price, string.Empty, "Price", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AlbumToEdit.Price, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AlbumToEdit.AlbumArtUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AlbumToEdit.AlbumArtUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
